<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="RANskril_GUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RANskril_GUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <SolidColorBrush x:Key="ParagraphInfoColorLight" Color="{ThemeResource TextFillColorPrimaryBrush}" />
            <SolidColorBrush x:Key="ParagraphWarningColorLight" Color="{ThemeResource SystemFillColorCautionBrush}" />
            <SolidColorBrush x:Key="ParagraphErrorColorLight" Color="{ThemeResource SystemFillColorCriticalBrush}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
